<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to 'Show' %></td>
          <td><%= link_to 'Edit' %></td>
          <td><%= link_to 'Destroy' %></td>
        </tr>
      <% end %>
    </tbody>
  </thead>
</table>

<h2>New Book</h2>
<%= form_with model:@book, local:true do |f| %>
<p>title</p>
<%= f.text_field :title %>
<p>body</p>
<%= f.text_field :body %><br>
<%= f.submit'Creat Book' %>
<% end %>
